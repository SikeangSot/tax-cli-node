{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "curly": "error",
        "quotes": [
            "error",
            "double"
        ],
        "no-else-return": "error",
        "space-before-blocks": [
            "error",
            {
                "functions": "always",
                "classes": "always"
            }
        ]
    }
}